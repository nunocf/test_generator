<html>
    <head>
        <meta charset="UTF-8">
        <style>
            body {
                font-family: Verdana, Geneva, sans-serif;
            }

            h3 {
                font-size: 16px;
            }

            ul {
                list-style: none;
                margin-bottom: 36px;

            }

            .question {
                -webkit-column-break-inside: avoid;
                page-break-inside: avoid;
                break-inside: avoid;
            }

            .container {
                display: block;
                position: relative;
                padding-left: 48px;
                margin-bottom: 16px;
                cursor: pointer;
                font-size: 16px;
                user-select: none;
            }

            .container input {
                position: absolute;
                opacity: 0;
                cursor: pointer;
                height: 0;
                width: 0;
            }

            /* Create a custom checkbox */
            .checkmark {
                position: absolute;
                top: 0;
                left: 0;
                height: 25px;
                width: 25px;
                background-color: #ffffff;
                border: 2px solid #000000;
            }

        </style>
    </head>
    <body>
        <%= for {%{question_text: question_text, answers: answers}, index} <- Enum.with_index(questions) do %>
            <div class="question">
                <h3><%= index + 1 %>. <%= question_text %></h3>
                <ul>
                    <%= for %{answer_text: answer_text} <- answers do %>
                        <li>
                            <label class="container">
                                <%= answer_text %>
                                <input type="checkbox"/>
                                <span class="checkmark"></span>
                            </label>
                        </li>
                    <% end %>
                </ul>
            </div>
        <% end %>
    </body>
</html>
